{
  "$schema": "https://json.schemastore.org/appsettings.json",

  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=certus_dev;Username=postgres;Password=postgres",
    "LocalPostgres": "Host=localhost;Port=5432;Database=certus_dev;Username=postgres;Password=postgres",
    "AzureStorage": ""
  },

  "Azure": {
    "KeyVault": {
      "VaultUri": ""
    },
    "Storage": {
      "AccountName": "",
      "ContainerName": "validations"
    },
    "PostgreSql": {
      "Host": "localhost",
      "Database": "certus_dev",
      "Username": "postgres"
    }
  },

  "Database": {
    "UseAzureTokenAuth": false,
    "EnableDetailedErrors": true,
    "SeedData": true,
    "EnableRetryOnFailure": true,
    "MaxRetryCount": 5,
    "CommandTimeout": 60
  },

  "Jwt": {
    "SecretKey": "YourDevSecretKeyHereMinimum32Characters!!"
  },

  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5173",
      "http://localhost:3000",
      "http://127.0.0.1:5173",
      "http://127.0.0.1:3000"
    ]
  },

  "ReferenceData": {
    "GleifApiUrl": "https://api.gleif.org/api/v1",
    "OpenFigiApiUrl": "https://api.openfigi.com/v3",
    "OpenFigiApiKey": "",
    "BanxicoSieApiUrl": "https://www.banxico.org.mx/SieAPIRest/service/v1",
    "BanxicoToken": "",
    "ValmerBaseUrl": "https://www.valmer.com.mx/VAL",
    "CacheExpirationMinutes": 60,
    "EnableCaching": true
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "Azure.Identity": "Warning",
        "Azure.Core": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}{NewLine}    {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/certus-dev-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ]
  }
}
