{
  "$schema": "https://json.schemastore.org/appsettings.json",

  "ConnectionStrings": {
    "DefaultConnection": "Host=your-postgres-host;Database=certus;Username=your-username;SSL Mode=Require;Trust Server Certificate=true",
    "LocalPostgres": "Host=localhost;Port=5432;Database=certus_dev;Username=postgres;Password=your-password"
  },

  "Azure": {
    "KeyVault": {
      "VaultUri": "https://your-keyvault.vault.azure.net/"
    },
    "Storage": {
      "AccountName": "your-storage-account",
      "ContainerName": "validations"
    },
    "PostgreSql": {
      "Host": "your-postgres-host.postgres.database.azure.com",
      "Database": "certus",
      "Username": "your-username"
    }
  },

  "Database": {
    "UseAzureTokenAuth": true,
    "EnableDetailedErrors": true,
    "SeedData": true,
    "EnableRetryOnFailure": true,
    "MaxRetryCount": 5,
    "CommandTimeout": 60
  },

  "Jwt": {
    "SecretKey": "YourDevSecretKeyAtLeast32CharactersLong!@#$%"
  },

  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5173",
      "http://localhost:5174",
      "http://localhost:4173",
      "http://localhost:3000",
      "http://127.0.0.1:5173",
      "http://127.0.0.1:5174",
      "http://127.0.0.1:4173",
      "http://127.0.0.1:3000"
    ]
  },

  "ReferenceData": {
    "GleifApiUrl": "https://api.gleif.org/api/v1",
    "OpenFigiApiUrl": "https://api.openfigi.com/v3",
    "OpenFigiApiKey": "your-openfigi-api-key",
    "BanxicoSieApiUrl": "https://www.banxico.org.mx/SieAPIRest/service/v1",
    "BanxicoToken": "your-banxico-token",
    "ValmerBaseUrl": "https://www.valmer.com.mx/VAL",
    "CacheExpirationMinutes": 60,
    "EnableCaching": true
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "Azure.Identity": "Warning",
        "Azure.Core": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}{NewLine}    {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/certus-dev-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ]
  }
}
