# EditorConfig - https://editorconfig.org
# Helps maintain consistent coding styles across different editors

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2
quote_type = single

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# CSS/SCSS files
[*.{css,scss,sass}]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# Configuration files
[*.{config.js,config.ts}]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2
end_of_line = lf

# Makefiles
[Makefile]
indent_style = tab

# Git configuration
[.git*]
indent_size = 2

# Docker files
[Dockerfile*]
indent_size = 2

[docker-compose*.yml]
indent_size = 2

# Terraform
[*.tf]
indent_size = 2

# Package manager lock files (preserve formatting)
[{package-lock.json,pnpm-lock.yaml,yarn.lock}]
indent_size = 2
